{
  "action": {
    "default_title": "Click to toggle bionic reading"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggleAutouse": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Turn bionic reading autouse on or off."
    },
    "toggleFontColor": {
      "suggested_key": {
        "default": "Ctrl+O",
        "mac": "Command+O"
      },
      "description": "Toggle font color between inherit and white."
    }
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end"
    }
  ],
  "description": "Faster Better and More Focused Reading",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "manifest_version": 3,
  "name": "Bionic Reading - Focused",
  "permissions": ["webNavigation", "storage", "commands"],
  "version": "1.1.0"
}
