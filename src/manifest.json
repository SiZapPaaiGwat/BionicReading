{
  "name": "Bionic Reading",
  "description": "Faster Better and More Focused Reading",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Click to toggle bionic reading"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [],
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  }
}
