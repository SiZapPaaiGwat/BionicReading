{
  "author": "Simon Xu",
  "dependencies": {},
  "description": "A bionic reading extension",
  "devDependencies": {
    "@types/chrome": "0.0.183",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "eslint": "8.14.0",
    "parcel": "2.5.0",
    "prettier": "2.6.2",
    "tsup": "5.12.8",
    "typescript": "4.6.4"
  },
  "keywords": [],
  "license": "ISC",
  "name": "bionicreading",
  "private": true,
  "scripts": {
    "build": "tsc && tsup && cp ./src/*.* ./dist && rm ./dist/*.ts",
    "watch": "tsup ./src/content.ts ./src/background.ts --watch"
  },
  "tsup": {
    "clean": true,
    "entry": [
      "./src/content.ts",
      "./src/background.ts"
    ],
    "minify": true,
    "sourcemap": false,
    "splitting": false,
    "external": []
  },
  "version": "2.0.0"
}
